<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/apd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:minWidth="110dp"
                        android:minHeight="110dp"
                        app:cpb_background_progressbar_width="2dp"
                        app:cpb_progress="40"
                        app:cpb_progressbar_width="12dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dashpercentaged"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="40 %"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/dashpriced"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="341"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </FrameLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/apm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:minWidth="110dp"
                        android:minHeight="110dp"
                        app:cpb_background_progressbar_width="2dp"
                        app:cpb_progress="80"
                        app:cpb_progressbar_width="12dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/dashpercentagem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="40 %"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/dashpricem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="341"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </FrameLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/apy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:minWidth="110dp"
                        android:minHeight="110dp"
                        app:cpb_background_progressbar_width="2dp"
                        app:cpb_progress="40"
                        app:cpb_progressbar_width="12dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/dashpercentagey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="40 %"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/dashpricey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="341"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </FrameLayout>

                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dashhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="?colorPrimary"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="4">

                    <ImageView
                        android:id="@+id/ibtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="?colorPrimary"
                        app:srcCompat="@drawable/dashboard_popup_menu_icon" />
                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
